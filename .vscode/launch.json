{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Backend",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "tsx",
			"cwd": "${workspaceFolder}/packages/backend",
			"env": {
				"NODE_ENV": "development"
			},
			"args": ["watch", "${workspaceFolder}/packages/backend/src/index.ts"],
			"skipFiles": ["<node_internals>/**"],
			"windows": {
				"console": "integratedTerminal"
			}
		},
		{
			"name": "Frontend",
			"type": "node",
			"request": "launch",
			"env": {
				"NODE_ENV": "development"
			},
			"runtimeExecutable": "vite",
			"envFile": "${workspaceFolder}/packages/frontend/.env",
			"cwd": "${workspaceFolder}/packages/frontend",
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"type": "chrome",
			"name": "Chrome Debugger",
			"request": "launch",
			"url": "http://localhost:5173",
			"webRoot": "${workspaceFolder}/packages/frontend"
		}
	],
	"compounds": [
		{
			"name": "Debugging",
			"configurations": ["Backend", "Frontend", "Chrome Debugger"],
			"stopAll": true,
			"preLaunchTask": "Compose Up (Detached)"
		}
	]
}
