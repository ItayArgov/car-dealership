{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compose Up",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "up"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "detail": "Start all services defined in compose.yml"
    },
    {
      "label": "Compose Up (Detached)",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "up", "-d"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "detail": "Start all services in detached mode"
    },
    {
      "label": "Compose Down",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "down"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "detail": "Stop and remove all services"
    },
    {
      "label": "Compose Logs",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "logs", "-f"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "detail": "Follow logs from all services"
    },
    {
      "label": "Compose Restart",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "restart"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "detail": "Restart all services"
    }
  ]
}
