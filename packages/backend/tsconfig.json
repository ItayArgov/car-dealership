{
	"compilerOptions": {
		"target": "ESNext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"strict": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": ["node"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"outDir": "./dist",

		"paths": {
			"~/*": ["./src/*"],
			"@dealership/common/*": ["../common/src/*"]
		}
	},
	"exclude": ["node_modules"]
}
